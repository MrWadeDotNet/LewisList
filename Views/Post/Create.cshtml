@model LewisList.ViewModels.PostViewModel
@{
    ViewBag.Title = "Create A Post";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-12">
            <div class="row-fluid">
                <!-- form panel 1 -->
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <!-- panel start-->

                    <!-- end panel-->
                    <div class="panel-body">
                        <div class="form-horizontal container">
                            @using (Html.BeginForm("CreatePost", "Post", FormMethod.Post, new { @id = "form-post-message", @class = "form-horizontal" }))
                            {
                                <div class="form-column col-lg-12 col-md-12 col-sm-12">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Category</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("categoryId", new SelectList(ViewBag.ProjectData, "CategoryId", "CategoryName"))
                                            @Html.ValidationMessageFor(model => model.Post.Category)

                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Subject</label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(p => p.Post.Subject, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Post.Subject)

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Price $</label>
                                        <div class="col-sm-8">

                                            @Html.TextBoxFor(p => p.Post.Price, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Post.Price)

                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label">Description</label>
                                        <div class="col-sm-8">
                                            @Html.TextAreaFor(p => p.Post.Description, new { @rows = 8, @cols = 20, @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Post.Description)
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-4 control-label"></label>
                                        <div class="col-sm-8">
                                            <input type="submit" class="btn btn-primary right" value="Create a Post">
                                        </div>
                                    </div>
                                </div>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
